// 全局颜色（蓝色）
$appColor = #369BFF
$appColorRGB = 54,155,255
$appBg = #f5f5f5
$panelBg = #fff
$borderColor = #e6e6e6

// px转换rem
toRem($px) {
    return (ceil($px / 37.5 * 1000) / 1000) rem
}

// 处理1px边框问题
@media(-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5) {
    .border-1px{ 
        &::after {
            -webkit-transform: scaleY(0.7);
            transform: scaleY(0.7);
        }
    }
}
@media(-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2) {
    .border-1px { 
        &::after {
            -webkit-transform: scaleY(0.5);
            transform: scaleY(0.5);
        }
    }
}
border-1px-top($color) {
    position: relative;
    &::after {
        display: block;
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        border-top: 1px solid $color;
        content: '';
    }
}
border-1px-left($color) {
    position: relative;
    &::after {
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 0;
        height: 100%;
        border-left: 1px solid $color;
        content: '';
    }
}
border-1px-bottom($color) {
    position: relative;
    &::after {
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        border-top: 1px solid $color;
        content: '';
    }
}
border-1px-right($color) {
    position: relative;
    &::after {
        display: block;
        position: absolute;
        right: 0;
        top: 0;
        width: 0;
        height: 100%;
        border-right: 1px solid $color;
        content: '';
    }
}

// 文字单行不换行溢出使用省略号
text-ellipsis() {
    white-space: pre;
    overflow: hidden;
    text-overflow: ellipsis;
}

// 多元素垂直居中
flex-vertical-center() {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}